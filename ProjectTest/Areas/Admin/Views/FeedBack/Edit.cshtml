@model ProjectTest.Models.FeedBack

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mdl-grid mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--4-col-phone mdl-cell--top">
    <div class="mdl-cell mdl-cell--7-col-desktop mdl-cell--7-col-tablet mdl-cell--4-col-phone">
        <div class="mdl-card__title">
            <h5 class="mdl-card__title-text text-color--white">Chỉnh sửa liên hệ</h5>
        </div>
        <div class="mdl-card__supporting-text">
            <form class="form form--basic" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mdl-textfield mdl-js-textfield full-size">
                    <label asp-for="Contents" class="mdl-textfield__label"></label>
                    <textarea asp-for="Contents" class="mdl-textfield__input" style="color:white"></textarea>
                    <span asp-validation-for="Contents" class="text-danger" style="color:white"></span>
                </div>
                <div class="mdl-textfield mdl-js-textfield full-size">
                    <label asp-for="Address" class="mdl-textfield__label"></label>
                    <input asp-for="Address" class="mdl-textfield__input" style="color:white" />
                    <span asp-validation-for="Address" class="text-danger" style="color:white"></span>
                </div>
                <div class="mdl-textfield mdl-js-textfield full-size">
                    <label asp-for="Phone" class="mdl-textfield__label"></label>
                    <input asp-for="Phone" class="mdl-textfield__input" style="color:white" />
                    <span asp-validation-for="Phone" class="text-danger" style="color:white"></span>
                </div>
                <div class="mdl-textfield mdl-js-textfield full-size">
                    <label asp-for="Status" class="control-label" style="color:white"></label>&nbsp;
                    <input asp-for="Status" class="mdl-checkbox__input" style="color:white" />
                    <span asp-validation-for="Status" class="text-danger" style="color:white"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-light-blue" />
                </div>
            </form>
            <a asp-action="Index" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-orange">Back to List</a>
        </div>
    </div>
</div>

