
@model ReflectionIT.Mvc.Paging.IPagingList<ProjectTest.Models.Account>
@using ReflectionIT.Mvc.Paging
@addTagHelper *,ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách tài khoản</h2>


<p>
    <a asp-action="Create"><i class="fas fa-plus-square"></i> Create New</a>
</p> 


@using (Html.BeginForm("Index", "Account", FormMethod.Get))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-4">
                <span style="color:white">Tìm kiếm: </span>
                <input type="text" name="searchString" />
                <button type="submit" value="Tìm kiếm">Tìm kiếm</button>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
}
<br />

<div class="col-md-12">
    <nav aria-label="Account navigation">
        @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
    </nav>
    <table class="mdl-data-table mdl-js-data-table">
        <thead>
            <tr>
                <th style="text-align:center">
                    Tài khoản
                </th>
                <th style="text-align:center">
                    Tên hiển thị
                </th>
                <th style="text-align:center">
                    Địa chỉ
                </th>
                <th style="text-align:center">
                    Email
                </th>
                <th style="text-align:center">
                    Số điện thoại
                </th>
                <th style="text-align:center">
                    Ngày lập tài khoản
                </th>
                <th style="text-align:center">
                    Ngày chỉnh sửa cuối
                </th>
                <th>
                    Admin
                </th>
                <th style="text-align:center">
                    Trạng thái
                </th>
                <th style="text-align:center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>

                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </td>
                    <td style="text-align:center">
                        @* @Html.DisplayFor(modelItem => item.IsAdmin)*@
                        @(item.IsAdmin == true ? "Active" : "Block")
                    </td>
                    <td style="text-align:center">
                        @* @Html.DisplayFor(modelItem => item.Status)*@
                        @(item.Status == true ? "Active" : "Block")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="label label--mini background-color--primary"><i class="fas fa-edit"></i> Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="label label--mini color--green" style="color:white"><i class="fas fa-info-circle"></i> Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="label label--mini background-color--secondary" style="color:white"> <i class="far fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Suppliers navigation example">
        <vc:pager pagin-list="@Model"></vc:pager>
    </nav>
    <p><a asp-action="Export">Export</a></p>
</div>

