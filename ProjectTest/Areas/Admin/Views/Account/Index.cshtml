@model IEnumerable<ProjectTest.Models.Account>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách tài khoản</h2>

<p>
    <a asp-action="Create"><i class="fas fa-plus-square"></i> Create New</a>
</p>
<div class="col-md-12" style="text-align:center">
    <table class="mdl-data-table mdl-js-data-table">
        <thead>
            <tr>
                <th style="text-align:center">
                    Tài khoản
                </th>
                <th style="text-align:center">                   
                    Tên hiển thị
                </th>
                <th style="text-align:center">                   
                    Địa chỉ
                </th>
                <th style="text-align:center">                  
                    Email
                </th>
                <th style="text-align:center">                   
                    Số điện thoại
                </th>
                <th style="text-align:center">                
                    Ngày lập tài khoản
                </th>
                <th style="text-align:center">                  
                    Ngày chỉnh sửa cuối
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAdmin)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th style="text-align:center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>

                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </td>
                    <td style="text-align:center">
                       @* @Html.DisplayFor(modelItem => item.IsAdmin)*@
                        @(item.IsAdmin==true?"Active":"Block")
                    </td>
                    <td style="text-align:center">
                     @* @Html.DisplayFor(modelItem => item.Status)*@
                        @(item.Status==true?"Active":"Block")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="label label--mini background-color--primary"><i class="fas fa-edit"></i> Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="label label--mini color--green" style="color:white"><i class="fas fa-info-circle"></i> Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="label label--mini background-color--secondary" style="color:white"> <i class="far fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

