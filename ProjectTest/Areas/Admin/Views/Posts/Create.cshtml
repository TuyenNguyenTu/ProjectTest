@model ProjectTest.Areas.Admin.Models.PostCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@section jsFooter{
    <script>
    $(document).ready(function () {
        CKEDITOR.replace('txtContentPost');
        CKEDITOR.replace('txtMetaDescription');
        $(document).ready(function () {
            $('.custom-file-input').on('change', function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
                console.log(fileName);
                console.log($('.custom-file-input').val());

            });
        })
    });
    </script>
}


<div class="mdl-card mdl-shadow--2dp employer-form">
    <div class="mdl-card__title">
        <h2>Tạo mới thông tin cá nhân</h2>
        <div class="mdl-card__subtitle">Vui lòng nhập đầy đủ thông tin</div>
    </div>

    <div class="mdl-card__supporting-text">
        <form class="form" asp-action="Create" enctype="multipart/form-data">
            <div class="form__article">
                <h3>Dữ liệu bài viểt</h3>
                <div class="mdl-grid">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div style="width:100%">
                        <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input class="mdl-textfield__input" type="text" asp-for="Title" />
                            <label class="mdl-textfield__label" asp-for="Title"></label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div style="width:100%">
                        Chọn hình ảnh <br />
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input class="form-control custom-file-input" type="file" asp-for="HinhAnh" id="HinhAnh" name="HinhAnh" />
                                <label class="custom-file-label">Choose File...</label>
                            </div>
                        </div>
                        <span asp-validation-for="HinhAnh" class="text-danger"></span>
                    </div>
                    <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input class="mdl-textfield__input" type="text" asp-for="Note" />
                        <label class="mdl-textfield__label" asp-for="Note"></label>
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                    <div class="">
                        Nội dung bài viết:
                        <textarea class="txtAreaIntro" asp-for="ContentPost" id="txtContentPost"></textarea>

                        <span asp-validation-for="ContentPost" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="">
                        Mô tả cơ bản:
                        <textarea class="txtAreaIntro" type="text" asp-for="MetaDescription" id="txtMetaDescription"></textarea>
                        <span asp-validation-for="MetaDescription" class="text-danger"></span>
                    </div>

                    <br />

                    <br />
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-teal" />
                </div>
            </div>
        </form>
        <div>
            <a asp-action="Index" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-orange">Back to List</a>
        </div>

    </div>
</div>


